{
    "authors": [
        "Richard (Rikki) Andrew Cattermole"
    ],
    "copyright": "Copyright Â© 2022, Richard Cattermole",
    "description": "Basic memory handling for -betterC and beyond.",
    "license": "Artistic-2.0",
    "name": "sidero_base",
    "homepage": "https://github.com/Project-Sidero/basic_memory",

    "importPaths": ["imports"],
    "sourcePaths": [],
    "sourceFiles": ["source/ignoreme.d"],
    "injectSourceFiles": ["source/sidero/base/allocators/gc_hook.d"],

    "dependencies": {
        "sidero_base:source": "*"
    },

    "subPackages": [
        {
            "name": "generators",
            "sourcePaths": ["database/generators", "database/utilities"],
            "targetType": "executable",
            "workingDirectory": "database"
        },
        {
            "name": "verify_generated",
            "sourcePaths": ["database/generated", "database/verify_generated", "source"],
            "targetType": "executable",
            "workingDirectory": "database"
        },
        {
            "name": "source",
            "targetType": "sourceLibrary",
            "importPaths": ["source"],
            "sourcePaths": ["source", "database/generated"],
            "sourceFiles": ["imports/sidero/base/text/unicode/database.d"],
            "dflags": ["-preview=dip1000", "-preview=dip25", "-allinst"],
            "dflags-windows-ldc": ["--fvisibility=public"]
        }
    ],

    "configurations": [
        {
            "name": "library",
            "targetType": "dynamicLibrary",
            "versions": ["DynamicSideroBase"],
            "buildOptions": [
                "betterC"
            ]
        },
        {
            "name": "static",
            "targetType": "staticLibrary",
            "buildOptions": [
                "betterC"
            ]
        },
        {
            "name": "unittest"
        }
    ]
}
